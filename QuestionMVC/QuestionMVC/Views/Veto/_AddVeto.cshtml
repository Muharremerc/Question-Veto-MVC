@model DAL.Model.Content
<h2><i class="fa fa-angle-right"></i> @Model.Name </h2>
<div class="form-panel">
    <div class=" form">
        <form class="cmxform form-horizontal style-form" id="commentForm">
            <div class="form-group ">
                <label for="cname" class="control-label col-lg-1">Option</label>
                <div class="col-lg-10">
                    <input class=" form-control" id="vname" name="vname" minlength="2" type="text" required="">
                </div>
            </div>
            <div id="optionList">

            </div>

            <div class="form-group">

                <div class="col-sm-10">
                    <a href="javascript:addVetoOptions()" class="btn btn-theme">Add Veto Option</a>
                    <a href="javascript:FinishContent()" class="btn btn-theme">Finish</a>
                </div>
            </div>

        </form>
    </div>
</div>